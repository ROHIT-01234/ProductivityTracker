{
    "manifest_version": 3,
    "name": "Focus Flow - Productivity Tracker",
    "version":"1.0.0",
    "description":"Keeps track of time spent on various domains and generates productivity reports.",
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action":{
        "default_popup":"popup.html",
        "default_icon": {
            "16": "icons/icon16.png"
        },
        "default_title":"Focus Flow - Productivity Tracker"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "webNavigation"
    ]
}
